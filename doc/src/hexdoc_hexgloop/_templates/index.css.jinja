body{
    --light-amethyst: #b38ef3;

    --mid-slate: #44354e;
    --darkish-slate: #272036;
    --dark-slate: #191325;
    --lightest-slate: #77637c;
    
    --mid-light-gloop: #cafcdd;
    --mid-gloop: #8df2cf;
    --mid-dark-gloop: #6acca8;
    --mid-darker-gloop: #4fab89;
    --dark-gloop: #388a6d;

    background-color: var(--dark-slate);
    @media (prefers-color-scheme: light) {
        background-color: #FFFFFF;
    }
}

