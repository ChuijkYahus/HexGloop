{# change pattern colors #}
canvas.spell-viz {
  --dot-color: var(--dark-gloop);
  --start-dot-color: color-mix(in srgb, var(--light-amethyst) 75%, transparent);
  --moving-dot-color: color-mix(in srgb, var(--mid-light-gloop) 75%, transparent);

  --path-color: var(--mid-slate);
  --visited-path-color: var(--mid-gloop);
}

@media (prefers-color-scheme: light) {
    a{
        color: var(--dark-gloop);
    }

    .navbar{
        background-color: white;
    }

    canvas.spell-viz {
        --visited-path-color: var(--mid-dark-gloop);
    }

    ::selection {
        background: var(--mid-gloop);
        color: var(--dark-slate);
    }
}